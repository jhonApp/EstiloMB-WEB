@using EstiloMB.MVC
@using EstiloMB.Core
@{
    ViewData["Title"] = "Pagamento Recusado";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<style>
    .container {
        /*max-width: 600px;
                margin: 0 auto;
                padding: 20px;*/
        text-align: center;
    }

        .container p {
            font-size: 20px;
            width: 50%;
            margin: 0 auto;
        }

    .payment-error {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        background-color: #e8603a;
        height: 200px;
        flex-direction: column;
    }

    .payment-error__icon {
        width: 110px;
        height: 150px;
        color: #fff;
        margin-top: -50px;
    }

    .payment-error__message {
        font-size: 24px;
        font-weight: bold;
        color: #fff;
        margin-top: -15px;
    }

    .btn-retry {
        background-color: transparent;
        color: black;
        border: none;
        border-bottom: 3px solid #474747;
        padding: 4px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-retry:hover {
            background-color: #474747;
            color: white;
        }
</style>

<div class="nav-main-sacola">
    <img class="logo" src="~/image/logo-oficial.png" alt="" />
    <nav>
        <div class="wrapper">
        </div>
    </nav>
</div>

<content>
    <div class="container">
        <div class="payment-error">
            <img src="~/image/bag-recusad.png" class="payment-error__icon" />
            <span class="payment-error__message">Pagamento Recusado</span>
        </div>
        <p>Sua compra não foi processada com sucesso. Por favor, verifique suas informações de pagamento e <a class="btn-retry" href="../Produto/FormaPagamento">tente novamente</a>.</p>
    </div>
</content>
