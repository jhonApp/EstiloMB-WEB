@using EstiloMB.MVC
@using EstiloMB.Core
@{
    ViewData["Title"] = "Pagamento Recusado";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<style>
    .container {
        /*max-width: 600px;
                margin: 0 auto;
                padding: 20px;*/
        text-align: center;
    }

        .container p {
            font-size: 20px;
            width: 40%;
            margin: 0 auto;
        }

    .payment-sucess {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        background-color: #1fbd1c;
        height: 200px;
        flex-direction: column;
    }

    .payment-sucess__icon {
        width: 120px;
        height: 160px;
        color: #fff;
        margin-top: -60px;
    }

    .payment-sucess__message {
        font-size: 24px;
        font-weight: bold;
        margin-top: -20px;
        color: #fff;
    }

    .btn-retry {
        background-color: transparent;
        color: black;
        border: none;
        border-bottom: 3px solid #474747;
        padding: 4px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-retry:hover {
            background-color: #474747;
            color: white;
        }
</style>

<div class="nav-main-sacola">
    <img class="logo" src="~/image/logo-oficial.png" alt="" />
    <nav>
        <div class="wrapper">
        </div>
    </nav>
</div>

<content>
    <div class="container">
        <div class="payment-sucess">
            <img src="~/image/bag-aproved.png" class="payment-sucess__icon" />
            <span class="payment-sucess__message">Pagamento Aprovado</span>
        </div>

        <p>Sua compra foi processada com sucesso. Por favor, aguarde nosso contato em seu e-mail.</p>
    </div>
</content>
