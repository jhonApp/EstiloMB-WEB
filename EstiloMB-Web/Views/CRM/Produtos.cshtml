    (function($produto) {

        let files = [];
        let container = document.querySelector('.img-container');

        const showImages = () => {
            
            let images = '';

            files.forEach((e, i) => {
                images += `<div class="image">
                                <img src="${URL.createObjectURL(e)}" alt="image"/>
