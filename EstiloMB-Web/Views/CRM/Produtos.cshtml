            let browser = element.querySelector('.select');
            let input = element.querySelector('.form input');
        
            input.click();

            //input change events
            input.addEventListener('change', () => {
                let file = input.files;

                for (let i = 0; i < file.length; i++) {
                    if(files.every(e => e.name != file[i].name)){
                        files.push(file[i]);
                    }
                }

                form.reset();
                showImages();
            });

